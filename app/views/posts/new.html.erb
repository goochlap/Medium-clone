<div class="container">

  <div class="form-post-create">

    <%= simple_form_for @post do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.submit "Create Post", class: 'btn btn-success' %>
      </div>
    <% end %>

  </div>

</div>
