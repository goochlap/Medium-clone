<div class="container">
  <div class="row">
    <div class="col-12">

      <h1>Your Post</h1>
      <%= link_to "Create a post", new_post_path, class: 'btn btn-dark' %>
      <hr>
      <div id="posts">

        <h3>Public</h3>
        
        <% @posts.each do |post| %>
          <% if post.published %>
            <h4><%= post.title %></h4>
            <p>· <%= post.created_at.strftime("%Y-%m-%d") %></p>
            <span><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></span>
          <% end %>
          <hr>
        <% end %>
          
        <h3>Private</h3>

          <% @posts.each do |post| %>
            <% if !post.published %>
              <h4><%= post.title %></h4>
              <p>· <%= post.created_at.strftime("%Y-%m-%d") %></p>
              <span><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></span>
              <%= link_to 'PUBLISH', post_path(post), method: :put %>
              <hr>
            <% end %>
          <% end %>

      </div>

    </div>
  </div>
</div>